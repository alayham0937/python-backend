# Function to find the second-largest number without sorting
def second_largest(numbers):
    first = second = float('-inf')  # Initialize to negative infinity
    
    for num in numbers:
        if num > first:
            second = first
            first = num
        elif first > num > second:
            second = num

    # Check if second was updated
    return second if second != float('-inf') else None

# Example list
numbers = [5, 3, 9, 1, 9, 7]

# Find second-largest number
result = second_largest(numbers)

if result is not None:
    print("Second largest number is:", result)
else:
    print("No second largest number found.")

# Dictionaries to merge
dict1 = {'x': 1, 'y': 2}
dict2 = {'y': 3, 'z': 4}

# Merge using union operator (Python 3.9+)
merged = dict1 | dict2

print("Merged dictionary:", merged)

